extends base

block content  
    h4 Update video
    form(method="post")
        input(name="title", placeholder="Video Title",value=video.title, required)
        input(placeholder="Description", name="description", required, type="text", minlength=20, value=video.description)
        input(placeholder="Hashtags, seperated by comma.", name="hashtags", required, type="text", value=video.hashtags.join())
        input(value="Save",type="submit")
    